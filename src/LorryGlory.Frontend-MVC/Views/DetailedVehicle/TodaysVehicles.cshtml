@using LorryGlory_Frontend_MVC.ViewModels.Vehicle
@model List<TodaysVehiclesForDriverViewModel>
@{
}
<div class="p-4 bg-gray-100">

    <!-- Header -->
    <div class="flex justify-center mb-4">
        <h1 class="text-lg font-bold">Todays Vehicles</h1>
    </div>

    <!-- Back to Menu Button -->
    <div class="flex items-center justify-between border-b border-gray-300 pb-2">
        <a asp-controller="Menu" asp-action="Index" class="flex items-center space-x-2">
            <svg class="h-6 w-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a1 1 0 01-.707-.293l-7-7a1 1 0 010-1.414l7-7a1 1 0 011.414 1.414L4.414 10l6.293 6.293a1 1 0 01-.707 1.707z" clip-rule="evenodd" />
            </svg>
        </a>
    </div>

    <!-- Vehicle List -->
    <div class="mt-6 flex flex-wrap justify-center gap-6">
        @if (Model == null || !Model.Any())
        {
            <p class="text-center text-gray-600">No vehicles available.</p>
        }
        else
        {
            @foreach (var vehicle in Model)
            {
                <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col w-full sm:w-80 md:w-96 lg:w-1/4">
                    <div class="p-6">
                        <p class="font-semibold text-lg text-gray-800">@vehicle.RegNo</p>
                        <span class="text-sm text-gray-800">@vehicle.Make @vehicle.Model</span>
                        <div class="mt-4 space-y-2">
                            <div class="flex text-left text-sm text-gray-800">
                                <span class="font-semibold mr-2">Start time:</span>
                                <span>@vehicle.StartTime.ToString("HH:mm")</span>
                            </div>
                            <div class="flex text-left text-sm text-gray-800">
                                <span class="font-semibold mr-2">End time:</span>
                                <span>@vehicle.EndTime.ToString("HH:mm")</span>
                            </div>
                        </div>
                    </div>
                    <!-- Button with Arrow aligned to the left -->
                    <div class="bg-gray-100 p-4 flex text-left">
                        <a asp-controller="DetailedVehicle" asp-action="Index" asp-route-id="@vehicle.Id" class="text-blue-500 hover:text-blue-700 flex items-center">
                            <span>View Details</span>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 ml-2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                            </svg>
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>
