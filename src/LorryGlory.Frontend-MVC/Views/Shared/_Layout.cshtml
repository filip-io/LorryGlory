<!DOCTYPE html>
<html lang="en">

    <head>
        <!-- Start cookieyes banner -->
        <script id="cookieyes" type="text/javascript" src="https://cdn-cookieyes.com/client_data/742e83ded28a1d9089b546d3/script.js"></script> <!-- End cookieyes banner -->
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-E671H88ZNZ"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-E671H88ZNZ');
        </script>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - LorryGlory</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/LorryGlory_Frontend_MVC.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
        <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    </head>

    <body>
        <header>
            <nav class="bg-white border-b border-gray-200 shadow relative">
                <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center h-16">
                        <div class="flex items-center">

                            <a href="/" class="hidden sm:block text-lg font-bold text-gray-800">
                                Lorry Glory</a>

                            <a href="/" class="block sm:hidden">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" 
                                    stroke-linejoin="round" 
                                    d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                                </svg>
                            </a>
                        </div>

                        <div class="sm:hidden" x-data="{ open: false }">
                            <button @@click="open = !open" class="text-gray-500 hover:text-gray-800 focus:outline-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                                </svg>
                            </button>

                            <div x-show="open"
                            
                                @@click.away="open = false"

                                x-transition:enter="transition ease-out duration-300 transform"
                                x-transition:enter-start="opacity-0 -translate-y-2"
                                x-transition:enter-end="opacity-100 translate-y-0"
                                x-transition:leave="transition ease-in duration-200 transform"
                                x-transition:leave-start="opacity-100 translate-y-0"
                                x-transition:leave-end="opacity-0 -translate-y-2"

                                class="fixed top-16 left-0 right-0 bg-gray-800 bg-opacity-100 text-white z-40 shadow-lg">

                                <div class="container mx-auto px-4 py-4 space-y-4 sm:px-6 lg:px-8 flex flex-col items-center text-center">
                                    <h2 class="text-2xl font-semibold">Dropdown Menu</h2>

                                    <a asp-controller="Home" asp-action="Index" class="block w-full max-w-xs px-4 py-2 text-lg text-white bg-blue-600 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-200">
                                        Home</a>
                                    <a asp-controller="Home" asp-action="Privacy" class="block w-full max-w-xs px-4 py-2 text-lg text-white bg-blue-600 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-200">
                                        Privacy</a>
                                    <a asp-controller="Login" asp-action="Index" class="block w-full max-w-xs px-4 py-2 text-lg text-white bg-blue-600 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-200">
                                        Login</a>
                                    <a asp-controller="Menu" asp-action="Index" class="block w-full max-w-xs px-4 py-2 text-lg text-white bg-blue-600 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-200">
                                        Menu</a>
                                    <a asp-controller="CurrentVehicle" asp-action="Index" class="block w-full max-w-xs px-4 py-2 text-lg text-white bg-blue-600 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-200">
                                        Current Vehicle</a>
                                    <a asp-controller="DetailedVehicle" asp-action="Index" class="block w-full max-w-xs px-4 py-2 text-lg text-white bg-blue-600 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-200">
                                        Detailed Vehicle
                                    </a>
                                    <a href="#" class="block w-full max-w-xs px-4 py-2 text-lg text-white bg-gray-600 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-200">
                                        Settings</a>
                                    <a href="#" class="block w-full max-w-xs px-4 py-2 text-lg text-white bg-yellow-600 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-200">
                                        Logout</a>

                                </div>
                            </div>
                        </div>

                        <div class="hidden sm:flex sm:space-x-6">
                            <a asp-controller="Home" asp-action="Index" class="text-gray-800 hover:text-blue-600">Home</a>
                            <a asp-controller="Home" asp-action="Privacy" class="text-gray-800 hover:text-blue-600">Privacy</a>
                            <a asp-controller="Login" asp-action="Index" class="text-gray-800 hover:text-blue-600">Login</a>
                            <a asp-controller="Menu" asp-action="Index" class="text-gray-800 hover:text-blue-600">Menu</a>
                            <a asp-controller="CurrentVehicle" asp-action="Index" class="text-gray-800 hover:text-blue-600">Current Vehicle</a>
                            <a asp-controller="DetailedVehicle" asp-action="Index" class="text-gray-800 hover:text-blue-600">Detailed Vehicle</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <div class ="flex flex-col items-center justify-between bg-gray-100 p-4">
            <footer class="w-full mt-4 text-center text-gray-600 text-sm">
                &copy; 2024 - Lorry Glory
            </footer>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

    </body>

</html>